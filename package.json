{
  "name": "between-the-prompts-blog",
  "version": "1.0.0",
  "description": "Hugo blog with TailwindCSS",
  "scripts": {
    "build-css": "tailwindcss -i ./src/input.css -o ./static/css/style.css --watch",
    "build-css-prod": "tailwindcss -i ./src/input.css -o ./static/css/style.css --minify",
    "dev": "concurrently \"npm run build-css\" \"hugo server --disableFastRender\"",
    "build": "npm run build-css-prod && hugo"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "concurrently": "^8.2.0",
    "tailwindcss": "^3.4.0"
  }
}
